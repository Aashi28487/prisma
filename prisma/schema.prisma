generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // Connection URL moved to `prisma.config.ts` (use DATABASE_URL in .env)
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
}
